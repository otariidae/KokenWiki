<h1 class="h3 text-center font-weight-light">Change your password</h1>

<div class="card mx-auto" style="max-width: 360px">
    <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
                <%= f.label :password, "新しいパスワード" %>
                <% if @minimum_password_length %>
                    <small class="text-muted">
                        (<%= @minimum_password_length %> characters minimum)
                    </small>
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :password_confirmation, "新しいパスワード(確認のためもう一度)" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="actions">
                <%= f.submit "Change my password", class: "btn btn-primary btn-block" %>
            </div>
        <% end %>

        <hr>

        <%= render "devise/shared/links" %>
    </div>
</div>

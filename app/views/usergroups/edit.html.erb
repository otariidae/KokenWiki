<%= render "settings/layout" do %>
    <h1>ユーザーグループ <%= @usergroup.name %>の編集</h1>
    <%= form_with url: @usergroup, scope: :usergroup, method: "put" do |form| %>
        <p>グループに入れたいユーザーにチェックしてください</p>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>名前</th>
                    <th>ユーザーID</th>
                </tr>
            </thead>
            <% @users.each do |user| %>
                <tr>
                    <td>
                        <%= form.check_box "user_ids", {:checked => @usergroup.users.include?(user), :multiple => true}, user.id.to_s, nil %>
                    </td>
                    <td><%= user.name %></td>
                    <td><%= user.user_id %></td>
                </tr>
            <% end %>
        </table>

        <%= form.submit "登録", :class => "btn btn-primary" %>
    <% end %>
<% end %>
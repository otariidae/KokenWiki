<%= render "settings/layout" do %>
    <table class="table">
        <thead>
            <tr>
                <td>名前</td>
                <td>ユーザーID</td>
                <td>メールアドレス</td>
                <td>ロック</td>
            </tr>
        </thead>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.name %></td>
                <td><%= user.user_id %></td>
                <td><%= user.email %></td>
                <td>
                    <% if user.access_locked? %>
                        <%= button_to "ロック解除", unlock_user_path(user), class: "btn btn-light", method: :delete, remote: true %>
                    <% else %>
                        <%= button_to "ロック", lock_user_path(user), class: "btn btn-danger", method: :put, remote: true %>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </table>
<% end %>